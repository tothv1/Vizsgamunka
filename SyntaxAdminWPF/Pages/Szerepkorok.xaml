<Page x:Class="SyntaxAdminWPF.Pages.Szerepkorok"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SyntaxAdminWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Szerepkorok">

    <Grid>
        <Button Content="↩ Vissza" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Height="29" Click="Button_Click" />
        <DataGrid x:Name="DG_Szerepkorok" Margin="102,0,0,0" AutoGenerateColumns="False" SelectionChanged="DG_Szerepkorok_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding roleid}" />
                <DataGridTextColumn Header="Rolename" Binding="{Binding roleName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Szerepkör&#xD;&#xA;Felvétel" HorizontalAlignment="Left" Margin="4,0,0,10" VerticalAlignment="Bottom" Width="93" Height="43" Click="Button_Click_1"/>

    </Grid>
</Page>
