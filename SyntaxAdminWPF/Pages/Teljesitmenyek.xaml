<Page x:Class="SyntaxAdminWPF.Pages.Teljesitmenyek"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SyntaxAdminWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Teljesitmenyek">

    <Grid>
        <Button Content="↩ Vissza" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Height="29" Click="Button_Click"/>
        <DataGrid x:Name="DG_Teljesitmenyek" Margin="102,0,0,0" AutoGenerateColumns="False" SelectionChanged="DG_Teljesitmenyek_SelectionChanged" FontSize="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="AchievementName" Binding="{Binding achievementName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Teljesítmény&#xD;&#xA;Felvétel" HorizontalAlignment="Left" Margin="2,0,0,10" VerticalAlignment="Bottom" Width="98" Height="48" Click="Button_Click_1" FontSize="9"/>

    </Grid>
</Page>
